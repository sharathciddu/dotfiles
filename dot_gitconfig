# Git's per user configuration file.
[user]
	name = Sharath Ciddu
	email = sharathciddu@gmail.com
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	editor = nvim
[alias]
	adog = "log --all --decorate --oneline --graph"
	guidiff = "difftool --dir-diff --no-symlinks -g"
	gdiff = "difftool --dir-diff --no-symlinks -g"

[diff]
	tool = bc4
